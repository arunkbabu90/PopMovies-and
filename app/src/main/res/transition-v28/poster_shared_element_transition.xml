<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@android:integer/config_mediumAnimTime"
    android:interpolator="@android:interpolator/fast_out_extra_slow_in"
    android:transitionOrdering="together">
    <changeImageTransform/>
    <changeBounds/>
    <changeClipBounds/>
    <fade>
        <targets>
            <target android:targetId="@id/tv_poster_title"/>
            <target android:targetId="@id/fab_favourites"/>
            <target android:targetId="@id/tv_movie_description"/>
            <target android:targetId="@id/tv_movie_date"/>
            <target android:targetId="@id/tv_movie_rating"/>
            <target android:targetId="@id/textView"/>
        </targets>
    </fade>

</transitionSet>