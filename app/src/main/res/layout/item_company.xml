<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    app:cardCornerRadius="@dimen/small_corner_radius"
    app:cardBackgroundColor="@color/colorDarkGrey"
    app:cardElevation="@dimen/small_card_elevation">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemCompany_displayPicture"
            android:layout_width="@dimen/dp_image_view_size_medium"
            android:layout_height="@dimen/dp_image_view_size_medium"
            android:layout_margin="@dimen/small_margin"
            android:layout_gravity="center"
            android:contentDescription="@string/company_logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/itemCompany_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:textColor="@color/colorTextGrey"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            tools:text="Fox 2000 Pictures" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>