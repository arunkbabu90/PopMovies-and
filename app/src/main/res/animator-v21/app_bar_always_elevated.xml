<?xml version="1.0" encoding="utf-8"?>
<!-- Fix for no elevation in AppbarLayout
    https://stackoverflow.com/questions/31115531/add-elevation-shadow-on-toolbar-for-pre-lollipop-devices/32393698#32393698
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <objectAnimator android:propertyName="elevation"
            android:valueTo="12dp"
            android:valueType="floatType"
            android:duration="1"/>
    </item>
</selector>